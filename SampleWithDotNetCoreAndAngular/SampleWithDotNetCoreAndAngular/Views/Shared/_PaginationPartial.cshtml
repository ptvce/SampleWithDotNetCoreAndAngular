@model PaginationModel
@{
    Layout = null;
}

    <nav aria-label="Page navigation example">
        <ul class="pagination">
            @for (int i = 1; i <= Model.Pages; i++)
            {
                if (i == Model.Page)
                {
                    <li class="page-item active"><a class="page-link" href="@(string.Format(Model.Url,i))">@i</a></li>
                }
                else
                {
                    <li class="page-item"><a class="page-link" href="@(string.Format(Model.Url,i))">@i</a></li>
                }
            }
        </ul>
    </nav>
